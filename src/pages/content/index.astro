---
// src/pages/content/index.astro
import { Image } from 'astro:assets';
import Layout from '../../layouts/Layout.astro';
import '../../styles/pages/_content.scss';

// --- Import รูปภาพสำหรับบทความ (ข้อมูลจำลอง) ---
import articleImage1 from '../../assets/images/content/article-1.webp';
import articleImage2 from '../../assets/images/content/article-2.webp';
import articleImage3 from '../../assets/images/content/article-3.webp';
import articleImage4 from '../../assets/images/content/article-4.webp';
import articleImage5 from '../../assets/images/content/article-5.webp';
import articleImage6 from '../../assets/images/content/article-6.webp';
import articleImage7 from '../../assets/images/content/article-7.webp';
import articleImage8 from '../../assets/images/content/article-8.webp';
import articleImage9 from '../../assets/images/content/article-9.webp';

// --- ข้อมูลบทความจำลอง ---
const mockArticles = [
  { title: 'ทำไมต้องเลือกกระเป๋าหนังแฮนด์เมด', excerpt: 'สำรวจเหตุผลที่ทำให้เครื่องหนังแฮนด์เมดมีความพิเศษและคุ้มค่ากว่างานที่ผลิตจากโรงงาน...', image: articleImage1, href: '#' },
  { title: 'คำแนะนำในการเลือกซื้อคอมพิวเตอร์', excerpt: 'เลือกซื้อคอมพิวเตอร์ให้เหมาะกับการใช้งานของคุณ ทั้งในด้านสเปคและราคาที่คุ้มค่า...', image: articleImage2, href: '#' },
  { title: 'เทคนิคเลือกรองเท้าบูทหนังให้เหมาะกับสไตล์', excerpt: 'ค้นพบสไตล์ที่ใช่และการดูแลรักษารองเท้าบูทหนังคู่โปรดของคุณให้สวยงามยาวนาน...', image: articleImage3, href: '#' },
  { title: 'วิธีดูแลรักษากระเป๋าหนังแท้ให้สวยงาม', excerpt: 'เรียนรู้วิธีทำความสะอาดและบำรุงรักษากระเป๋าหนังแท้ของคุณให้อยู่ในสภาพดีที่สุด...', image: articleImage4, href: '#' },
  { title: 'ทำไมการเลือกซื้อกระเป๋าแบรนด์เนมมือสองจึงเป็นที่นิยม', excerpt: 'ค้นพบข้อดีของการเลือกซื้อกระเป๋าแบรนด์เนมมือสอง ทั้งในด้านราคาและความคุ้มค่า...', image: articleImage5, href: '#' },
  { title: 'เปิดความลับของกระเป๋าแบรนด์เนมมือสอง', excerpt: 'เจาะลึกเรื่องราวของกระเป๋าแบรนด์เนมมือสองที่น่าสนใจและคุ้มค่ากว่าที่คิด...', image: articleImage6, href: '#' },
  { title: 'ทำไมผู้หญิงถึงหลงใหลในเครื่องหนัง', excerpt: 'สำรวจเหตุผลที่ทำให้ผู้หญิงทั่วโลกหลงใหลในเสน่ห์ของเครื่องหนังแท้...', image: articleImage7, href: '#' },
  { title: 'ทำไมหนังแท้จึงมีราคาแพงกว่าหนังเทียม', excerpt: 'ค้นพบความแตกต่างระหว่างหนังแท้และหนังเทียม ทั้งในด้านคุณภาพและความทนทาน...', image: articleImage8, href: '#' },
  { title: 'กระเป๋า Coach: ทางเลือกที่คุ้มค่ากว่า', excerpt: 'เปรียบเทียบความคุ้มค่าของกระเป๋า Coach กับแบรนด์เนมอื่นๆ ในตลาด...', image: articleImage9, href: '#' },
];
---

<Layout 
  title="บทความและสาระน่ารู้เกี่ยวกับเครื่องหนังแท้ | SabuyKapao"
  description="แหล่งรวมบทความและสาระน่ารู้เกี่ยวกับเครื่องหนังแท้จาก SabuyKapao อ่านเคล็ดลับการดูแลรักษา, เรื่องราวเบื้องหลังงานแฮนด์เมด, และไอเดียการเลือกซื้อสินค้าหนัง"
>
  <main class="content-page">
    <div class="container">
      <h1 class="page-title">บทความน่ารู้</h1>

      <div class="content-grid">
        {mockArticles.map(article => (
          <article class="article-card">
            <a href={article.href} class="article-card__image-link">
              <Image 
                src={article.image} 
                alt={article.title} 
                width="600" 
                height="600"
                format="webp" 
                quality={80} 
              />
            </a>
            <div class="article-card__content">
              <h3 class="article-card__title">
                <a href={article.href}>{article.title}</a>
              </h3>
              <p class="article-card__excerpt">{article.excerpt}</p>
            </div>
          </article>
        ))}
      </div>

      <nav class="pagination">
        <a href="#" class="pagination__link current">1</a>
        <a href="#" class="pagination__link">2</a>
        <a href="#" class="pagination__link">3</a>
        <a href="#" class="pagination__link next">&rarr;</a>
      </nav>

    </div>
  </main>
</Layout>