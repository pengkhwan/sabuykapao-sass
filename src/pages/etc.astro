---
// src/pages/etc.astro
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import '../styles/pages/_category-page.scss';

// --- Import รูปภาพสินค้า (ข้อมูลจำลอง) ---
import p1 from '../assets/images/products/product-etc-1.webp';
import p2 from '../assets/images/products/product-etc-2.webp';
import p3 from '../assets/images/products/product-etc-3.webp';
import p4 from '../assets/images/products/product-etc-4.webp';
import p5 from '../assets/images/products/product-etc-5.webp';
import p6 from '../assets/images/products/product-etc-6.webp';
import p7 from '../assets/images/products/product-etc-7.webp';
import p8 from '../assets/images/products/product-etc-8.webp';
import p9 from '../assets/images/products/product-etc-9.webp';

// --- ข้อมูลสินค้าจำลอง 9 ชิ้น ---
const mockProducts = [
  { name: 'ซองแว่นตาหนังแท้', price: 450, image: p1, href: '#' },
  { name: 'กระเป๋าใส่นามบัตร', price: 390, image: p2, href: '#' },
  { name: 'สายคล้องแมสหนังตอกชื่อ', price: 250, image: p3, href: '#' },
  { name: 'ที่รัดสายชาร์จหนังแท้', price: 150, image: p4, href: '#' },
  { name: 'ป้ายแท็กกระเป๋าเดินทาง', price: 290, image: p5, href: '#' },
  { name: 'ปลอกหนังแก้วกาแฟ', price: 350, image: p6, href: '#' },
  { name: 'ที่คั่นหนังสือหนังแท้', price: 190, image: p7, href: '#' },
  { name: 'ซองใส่กุญแจรถยนต์', price: 490, image: p8, href: '#' },
  { name: 'พวงกุญแจหนังขนาดเล็ก', price: 120, image: p9, href: '#' },
];

const pageSchema = {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "สินค้าเครื่องหนัง-จิปาถะ | SabuyKapao",
    "description": "รวมเครื่องหนังหลากหลาย เช่น ซองแว่นตา, กระเป๋าใส่นามบัตร, สายคล้องแมส ทุกชิ้นทำจากหนังแท้เกรด A คุณภาพสูง",
    "url": new URL(Astro.url.pathname, Astro.site).href,
};
---
<Layout 
  title="สินค้าเครื่องหนัง-จิปาถะ | SabuyKapao"
  description="รวมเครื่องหนังหลากหลาย เช่น ซองแว่นตา, กระเป๋าใส่นามบัตร, สายคล้องแมส ทุกชิ้นทำจากหนังแท้เกรด A คุณภาพสูง"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
  </Fragment>

  <main class="category-page">
    <div class="container">
      <div class="category-header">
        <h1>สินค้าเครื่องหนัง-จิปาถะ</h1>
        <p>รวมเครื่องหนังหลากหลายไว้ให้เลือกซื้อในราคาถูก เหมาะสำหรับเป็นของฝาก ทุกชิ้นทำจากหนังแท้เกรด A ทำให้มั่นใจในเรื่องของคุณภาพสินค้า</p>
      </div>
      <div class="product-grid-container">
        <div class="product-grid">
          {mockProducts.map((product, index) => (
            <a href={product.href} class="product-card">
              <div class="product-card__image-wrapper">
                <Image src={product.image} alt={product.name} width="600" height="600" format="webp" quality={80} loading={index < 3 ? 'eager' : 'lazy'} />
              </div>
              <div class="product-card__info">
                <h2 class="product-card__name">{product.name}</h2>
                <p class="product-card__price">{product.price} บาท</p>
              </div>
            </a>
          ))}
        </div>
      </div>
      
      <nav class="pagination">
        <a href="#" class="pagination__link current">1</a>
        <a href="#" class="pagination__link">2</a>
        <a href="#" class="pagination__link">3</a>
        <a href="#" class="pagination__link next">&rarr;</a>
      </nav>

      <div class="category-description">
        <h2>เหตุผลที่ควรใช้ซองแว่นตาหนัง</h2>
        <p>ซองแว่นตาหนังช่วยป้องกันรอยขีดข่วน ฝุ่นละออง และแรงกระแทก ช่วยให้แว่นตาของคุณคงสภาพดี ใช้งานได้ยาวนาน นอกจากนี้ยังเสริมสร้างบุคลิกให้ดูดีอีกด้วย</p>
        <h2>สายคล้องแมสหนังตอกชื่อ: ของขวัญที่สมบูรณ์แบบ</h2>
        <p>สายคล้องแมสหนังตอกชื่อช่วยให้ผู้ใช้งานพกพาสะดวกโดยไม่ต้องกลัวสูญหาย สามารถเลือกตอกชื่อหรือข้อความพิเศษเพื่อเพิ่มคุณค่าให้กับของขวัญได้</p>
      </div>
    </div>
  </main>
</Layout>