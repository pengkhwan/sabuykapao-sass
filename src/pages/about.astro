---
// src/pages/about.astro
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import '../styles/pages/_about.scss';

// --- นำเข้ารูปภาพ ---
import heroImage from '../assets/images/about/about-hero.webp';
import materialsImage from '../assets/images/about/about-materials.webp';
import craftsmanshipImage from '../assets/images/about/about-craftsmanship.webp';

// --- ข้อมูลสำหรับ Section ต่างๆ ---
const philosophyItems = [
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" /></svg>`,
        title: "คัดสรรคุณภาพ",
        text: "เราเริ่มต้นจากวัตถุดิบที่ดีที่สุด คัดเลือกหนังวัวแท้เกรดพรีเมียมที่ทั้งสวยงามและทนทาน"
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" /></svg>`,
        title: "ออกแบบเฉพาะคุณ",
        text: "ผลงานหลายชิ้นของเราสามารถปรับเปลี่ยนและใส่รายละเอียดเฉพาะตัว เช่น การตอกชื่อหรือโลโก้"
    },
    {
        icon: `<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12Z" /></svg>`,
        title: "ใส่ใจทุกรายละเอียด",
        text: "เราเชื่อว่าคุณค่าของงานแฮนด์เมดคือความใส่ใจ เราจึงดูแลทุกขั้นตอนการผลิตด้วยตัวเอง"
    }
];

const pageSchema = {
    "@context": "https://schema.org",
    "@type": "AboutPage",
    "name": "เกี่ยวกับเรา - SabuyKapao",
    "description": "เรื่องราวและปรัชญาของ SabuyKapao เรามุ่งมั่นสร้างสรรค์เครื่องหนังแท้แฮนด์เมดคุณภาพสูง ที่สะท้อนตัวตนและคงความงดงามเหนือกาลเวลา",
    "url": new URL(Astro.url.pathname, Astro.site).href,
};
---

<Layout 
  title="เกี่ยวกับเรา - SabuyKapao"
  description="เรื่องราวและปรัชญาของ SabuyKapao เรามุ่งมั่นสร้างสรรค์เครื่องหนังแท้แฮนด์เมดคุณภาพสูง ที่สะท้อนตัวตนและคงความงดงามเหนือกาลเวลา"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
  </Fragment>

  <main class="about-page">
    <section class="about-hero">
      <div class="container about-hero__grid">
        <div class="about-hero__image">
          <Image src={heroImage} alt="บรรยากาศร้าน SabuyKapao" width="800" height="600" format="webp" quality={80} />
        </div>
        <div class="about-hero__content">
          <h1>เรื่องราวของเรา</h1>
          <p>
            SabuyKapao ถือกำเนิดขึ้นจากความหลงใหลในเสน่ห์ของเครื่องหนังแท้ เราเชื่อว่าเครื่องหนังไม่ใช่แค่เครื่องประดับ แต่เป็นเพื่อนร่วมเดินทางที่เก็บเรื่องราวและสะท้อนตัวตนของผู้ใช้งาน เราจึงมุ่งมั่นสร้างสรรค์ผลงานแฮนด์เมดคุณภาพสูง ที่ผสมผสานระหว่างดีไซน์ที่เรียบง่ายแต่โดดเด่น กับความทนทานที่พร้อมจะอยู่กับคุณไปตราบนานเท่านาน
          </p>
        </div>
      </div>
    </section>

    <section class="philosophy-section">
      <div class="container">
        <div class="section-header">
          <h2>มากกว่างานฝีมือ คือปรัชญาของเรา</h2>
        </div>
        <div class="philosophy-grid">
          {philosophyItems.map(item => (
            <div class="philosophy-card">
              <div class="philosophy-card__icon" set:html={item.icon} />
              <h3>{item.title}</h3>
              <p>{item.text}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <section class="feature-section">
      <div class="container feature-section__grid">
        <div class="feature-section__image">
          <Image src={materialsImage} alt="หนังวัวแท้คุณภาพสูง" width="800" height="800" format="webp" quality={80} />
        </div>
        <div class="feature-section__content">
          <h2>วัตถุดิบที่เราเลือก</h2>
          <ul>
            <li><strong>หนังวัวแท้ 100%:</strong> เราใช้หนังวัวฟอกฝาดและหนังออยล์ที่ขึ้นชื่อเรื่องความทนทานและลวดลายที่เป็นเอกลักษณ์ตามธรรมชาติ</li>
            <li><strong>ยิ่งใช้ ยิ่งสวย:</strong> เสน่ห์ของหนังแท้คือร่องรอยตามกาลเวลา (Aging) ที่จะทำให้ชิ้นงานของคุณสวยงามและมีเรื่องราวมากขึ้น</li>
          </ul>
        </div>
      </div>
    </section>

    <section class="feature-section">
      <div class="container feature-section__grid reverse">
        <div class="feature-section__image">
          <Image src={craftsmanshipImage} alt="การเย็บเครื่องหนังด้วยมือ" width="800" height="800" format="webp" quality={80} />
        </div>
        <div class="feature-section__content">
          <h2>ความประณีตในทุกฝีเข็ม</h2>
          <ul>
            <li><strong>งานเย็บมือ (Hand-Stitched):</strong> เราบรรจงเย็บทุกฝีเข็มด้วยมือเพื่อความแข็งแรงและสวยงามที่เป็นเอกลักษณ์ซึ่งงานจักรไม่สามารถเทียบได้</li>
            <li><strong>ออกแบบและผลิตเอง:</strong> ทุกขั้นตอนตั้งแต่การออกแบบ, ตัดเย็บ, จนถึงการเก็บรายละเอียด เราดูแลด้วยตัวเองเพื่อให้ได้คุณภาพที่ดีที่สุด</li>
          </ul>
        </div>
      </div>
    </section>
  </main>
</Layout>