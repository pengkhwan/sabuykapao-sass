---
// src/pages/contact-us.astro
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import '../styles/pages/_contact.scss';
import storefrontImage from '../assets/images/contact/contact-storefront.webp';

const pageSchema = {
    "@context": "https://schema.org",
    "@type": "ContactPage",
    "name": "ติดต่อเรา - SabuyKapao",
    "description": "ติดต่อ SabuyKapao เพื่อสอบถามข้อมูล สั่งทำสินค้า หรือเยี่ยมชมร้านของเราที่ดำเนินสะดวก ราชบุรี เราพร้อมให้บริการเครื่องหนังแฮนด์เมดคุณภาพ",
    "url": new URL(Astro.url.pathname, Astro.site).href,
};

// --- พิกัดร้าน ---
const coordinates = "13.57375628272967,99.97051673787385";
---

<Layout 
  title="ติดต่อเรา - SabuyKapao"
  description="ติดต่อ SabuyKapao เพื่อสอบถามข้อมูล สั่งทำสินค้า หรือเยี่ยมชมร้านของเราที่ดำเนินสะดวก ราชบุรี เราพร้อมให้บริการเครื่องหนังแฮนด์เมดคุณภาพ"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
  </Fragment>

  <main class="contact-page">
    <div class="container">
      <div class="page-header">
        <h1>ติดต่อเรา</h1>
        <p>หากมีคำถามเพิ่มเติมหรือต้องการความช่วยเหลือ โปรดติดต่อเราผ่านช่องทางที่สะดวกสำหรับคุณ</p>
      </div>

      <div class="contact-grid">
        <div class="contact-info">
          <div class="contact-block">
            <h2>ช่องทางการติดต่อ</h2>
            <ul>
              <li><strong>เว็บไซต์:</strong> <a href="https://sabuykapao.com">sabuykapao.com</a></li>
              <li><strong>Facebook:</strong> <a href="https://www.facebook.com/marah5g" target="_blank" rel="noopener noreferrer">marah5g</a></li>
              <li><strong>Line:</strong> @marah5g</li>
              <li><strong>เบอร์โทร:</strong> 084-0954445, 092-6699986</li>
            </ul>
          </div>

          <div class="contact-block">
            <h2>เวลาทำการ</h2>
            <ul>
              <li><strong>จันทร์ - เสาร์:</strong> 8:00 – 17:00</li>
              <li><strong>วันอาทิตย์:</strong> 8:00 – 11:00</li>
            </ul>
          </div>
        </div>

        <div class="contact-location">
          <h2>ที่อยู่ร้าน</h2>
          <p>
            337/2 หมู่ 4 ต.ดอนกรวย อ.ดำเนินสะดวก จ.ราชบุรี 70130
            <span class="location-note">(ใกล้ตลาดน้ำดำเนินสะดวก)</span>
          </p>
          <a href={`https://maps.google.com/2{coordinates}`} target="_blank" rel="noopener noreferrer" class="map-link">
            ดูเส้นทางใน Google Map →
          </a>
          <div class="storefront-image">
            <Image src={storefrontImage} alt="หน้าร้าน SabuyKapao" width="800" height="600" format="webp" quality={80} />
          </div>
        </div>
      </div>
    </div>
    
    <div class="google-map-container">
      <iframe
        src={`https://maps.google.com/3{coordinates}&z=15&output=embed`}
        width="100%"
        height="100%"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        title="แผนที่ร้าน SabuyKapao">
      </iframe>
    </div>
  </main>
</Layout>