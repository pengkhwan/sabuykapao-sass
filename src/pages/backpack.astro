---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import '../styles/pages/_category-page.scss';

import p1 from '../assets/images/products/product-backpack-1.webp';
import p2 from '../assets/images/products/product-backpack-2.webp';
import p3 from '../assets/images/products/product-backpack-3.webp';
import p4 from '../assets/images/products/product-backpack-4.webp';
import p5 from '../assets/images/products/product-backpack-5.webp';
import p6 from '../assets/images/products/product-backpack-6.webp';
import p7 from '../assets/images/products/product-backpack-7.webp';
import p8 from '../assets/images/products/product-backpack-8.webp';
import p9 from '../assets/images/products/product-backpack-9.webp';

const mockProducts = [
  { name: 'กระเป๋าเป้หนังแท้ รุ่น Traveller', price: 2990, image: p1, href: '#' },
  { name: 'กระเป๋าเป้หนังทรงวินเทจ', price: 3200, image: p2, href: '#' },
  { name: 'กระเป๋าเป้สำหรับใส่ Laptop', price: 3500, image: p3, href: '#' },
  { name: 'กระเป๋าเป้หนังขนาดเล็ก', price: 2590, image: p4, href: '#' },
  { name: 'กระเป๋าเป้หนังสีดำคลาสสิก', price: 2990, image: p5, href: '#' },
  { name: 'กระเป๋าเป้หนังสีน้ำตาลเข้ม', price: 2990, image: p6, href: '#' },
  { name: 'กระเป๋าเป้ดีไซน์ Unisex', price: 3100, image: p7, href: '#' },
  { name: 'กระเป๋าเป้หนังออยล์', price: 3400, image: p8, href: '#' },
  { name: 'กระเป๋าเป้สั่งทำพิเศษ', price: 3800, image: p9, href: '#' },
];

const pageSchema = {
    "@context": "https://schema.org",
    "@type": "CollectionPage",
    "name": "กระเป๋าเป้หนังแท้ | SabuyKapao",
    "description": "กระเป๋าเป้หนังแท้ ผลิตจากหนังวัวคุณภาพสูง ทนทาน ใช้งานได้ยาวนาน น้ำหนักเบา พกพาสะดวก เหมาะสำหรับทุกโอกาส",
    "url": new URL(Astro.url.pathname, Astro.site).href,
};
---
<Layout 
  title="กระเป๋าเป้หนังแท้ | SabuyKapao"
  description="กระเป๋าเป้หนังแท้ ผลิตจากหนังวัวคุณภาพสูง ทนทาน ใช้งานได้ยาวนาน น้ำหนักเบา พกพาสะดวก เหมาะสำหรับทุกโอกาส"
>
  <Fragment slot="head">
    <script type="application/ld+json" set:html={JSON.stringify(pageSchema)} />
  </Fragment>

  <main class="category-page">
    <div class="container">
      <div class="category-header">
        <h1>กระเป๋าเป้หนัง</h1>
        <p>กระเป๋าเป้หนังแท้จากร้านเรา ผลิตจากหนังวัวแท้คุณภาพสูง ทนทาน ใช้งานได้ยาวนาน น้ำหนักเบา พกพาสะดวก จุของได้เยอะ ดีไซน์ทันสมัย เข้ากับทุกสไตล์การแต่งตัว</p>
      </div>
      <div class="product-grid-container">
        <div class="product-grid">
          {mockProducts.map((product, index) => (
            <a href={product.href} class="product-card">
              <div class="product-card__image-wrapper">
                <Image src={product.image} alt={product.name} width="600" height="600" format="webp" quality={80} loading={index < 3 ? 'eager' : 'lazy'} />
              </div>
              <div class="product-card__info">
                <h2 class="product-card__name">{product.name}</h2>
                <p class="product-card__price">{product.price} บาท</p>
              </div>
            </a>
          ))}
        </div>
      </div>
      
      <nav class="pagination">
        <a href="#" class="pagination__link current">1</a>
        <a href="#" class="pagination__link">2</a>
        <a href="#" class="pagination__link">3</a>
        <a href="#" class="pagination__link next">&rarr;</a>
      </nav>

      <div class="category-description">
        <h2>การเลือกซื้อกระเป๋าเป้สะพายหลังหนังแท้</h2>
        <p>ควรพิจารณาจากปัจจัยต่างๆ เช่น การใช้งาน, สไตล์, วัสดุ, และราคา เพื่อให้ได้กระเป๋าที่เหมาะสมและคุ้มค่าที่สุด</p>
        <h2>กระเป๋าเป้สะพายหลังหนังแท้ ใช้งานได้หลากหลาย</h2>
        <p>ไม่ว่าจะใส่ไปทำงาน, ใส่ไปเที่ยว, ใส่ไปเรียน, หรือใส่ไปช้อปปิ้ง กระเป๋าเป้หนังแท้ก็สามารถตอบโจทย์ได้ทุกความต้องการ</p>
      </div>
    </div>
  </main>
</Layout>