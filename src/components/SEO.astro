---
// src/components/SEO.astro
import { SEO } from "astro-seo";
import type { Props as AstroSeoProps } from "astro-seo";

interface Props extends AstroSeoProps {}

const { 
  title, 
  description,
  canonical,
  openGraph,
  ...rest
} = Astro.props;
---
<SEO
  title={title}
  description={description}
  canonical={canonical}
  openGraph={{
    basic: {
      title: openGraph?.basic.title || title,
      type: "website",
      image: openGraph?.basic.image,
    },
    image: {
      alt: openGraph?.image?.alt || title,
    },
  }}
  twitter={{
    card: "summary_large_image",
    title: openGraph?.basic.title || title,
    description: description,
    image: openGraph?.basic.image,
    imageAlt: openGraph?.image?.alt || title,
  }}
  {...rest}
/>